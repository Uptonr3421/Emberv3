# ===========================================
# EMBER AI ASSISTANT CONFIGURATION
# ===========================================

# API Configuration
API_KEY=your_api_key_here
OPENAI_API_KEY=your_openai_key_here
ANTHROPIC_API_KEY=your_anthropic_key_here

# Environment Settings
ENVIRONMENT=development
DEBUG=true
VERBOSE_LOGGING=true

# Model Configuration
MODEL_NAME=dolphin-2.9-llama3-8b
MODEL_PATH=./models/
BACKUP_MODEL=gpt-4-turbo
MODEL_TEMPERATURE=0.7
MAX_TOKENS=4096

# Agent Configuration
AGENT_STARTUP_DELAY=2
AGENT_FILE_WATCH_INTERVAL=1
AGENT_RETRY_ATTEMPTS=3
BACKGROUND_AGENT_ENABLED=true

# Performance Settings
LLM_PRELOAD_ENABLED=true
CACHE_RESPONSES=true
CACHE_TTL=3600
WARM_MODEL_ON_STARTUP=true

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=ember.log
LOG_MAX_SIZE=10MB
LOG_BACKUP_COUNT=5
LOG_FORMAT=detailed

# Workspace Settings
AUTO_SAVE_INTERVAL=30
CONTEXT_WINDOW_SIZE=4096
CONTEXT_WARN_THRESHOLD=3500
PROJECT_BACKUP_ENABLED=true

# Security Settings
ENCRYPT_SENSITIVE_DATA=true
SESSION_TIMEOUT=7200
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# Integration Settings
GIT_AUTO_COMMIT=false
CURSOR_INTEGRATION=true
TERMINAL_INTEGRATION=true
FILE_WATCHER_ENABLED=true